bool isValid(char* s) {

    int len = strlen(s);
    char stack[len];
    int index = -1;
    if(len%2 == 0)
    {
        int i = 0;
      
        while(s[i] != '\0')
        {
            if(s[i] == '(' || s[i] == '{' || s[i] == '[')
                stack[++index] = s[i];
            else if(s[i] == ')' || s[i] == '}' || s[i] == ']')
            {
                if(index == -1)
                    return false;
                char open;
                char top = stack[index--];
                switch (s[i])
                {
                case ')':
                    open = '(';
                    break;
                case '}':
                    open = '{';
                    break;
                case ']':
                    open = '[';
                    break;
                }
                if(open != top)
                    return false;
            }
            else
               return false;
            
            i++;
        }
    }
    else
        return false;
    
    if(index == -1)
        return true;
    else
       return false;
}
